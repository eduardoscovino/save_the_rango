<div class="container py-5 content">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="card-signature" id="killed-hover-oncard">
          <%= cl_image_tag @signature.photo.key, width: 400, height: 300, crop: :fill %>
          <div class="card-signature-infos">
            <h2 class= "my-3"><%= @signature.title %></h2>
              <p style="font-size: 16px;"> R$ <%= @signature.price %></p>
              <p><%= @signature.description %></p>
              <p><%= @signature.type_of %> </p>
            <% if policy(Subscription).create? %>
                <div class="d-flex justify-content-center">
                    <%= link_to "Select signature", signature_subscriptions_path(@signature), class: "btn-homepage mr-3", method: :post %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center mb-5">
    <%= link_to "Back", signatures_path, class: "btn-main ml-5" %>
  </div>
</div>
