<h1>Signatures#show</h1>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="card-signature mb-4" id="killed-hover-oncard">

          <!-- image of a signature  -->

        <div class="card mb-4">
          <div>
            <h2 class= "mb-3"><%= @signature.title %></h2>
              <p style="font-size: 16px;"> R$ <%= @signature.price %></p>
              <p><%= @signature.description %></p>
              <p><%= @signature.type_of %> </p>

            <% if policy(Subscription).create? %>

            <%= link_to "choose this signature", signature_subscriptions_path(@signature), class: "pt-3", class: "btn btn-outline-primary", method: :post %>
            <% end %>

          </div>
        </div>

          <div class="d-flex justify-content-around mt-4 py-2 icons">
            <%= link_to signatures_path, title: "Back" do %>
              <i class="fas fa-undo-alt"></i>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
