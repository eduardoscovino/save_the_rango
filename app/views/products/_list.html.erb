        <div data-refresh-list-target="list">
          <div class="container my-3 content">
              <% if user_signed_in? %>
                <% if policy(Basket).show? && current_user.basket %>
                  <%= link_to "My basket", basket_path(current_user.basket), class: "btn btn-primary" %>
                <% end %>
              <% end %>
              <% if params[:query].blank? %>
                <h1 class="h3 mt-2"><%= pluralize products.count, 'product' %> available</h1>
              <% else %>
                <h1 class="h3 mt-2"><%= pluralize products.count, 'result' %> for <code><%= params[:query] %></code></h1>
              <% end %>
            <div class="row">
              <% @products.each do |product| %>
                <div class="col-12 col-md-6 col-lg-6">
                  <div class="card mb-4">
                    <%= image_tag "orange.jpg", class: "card-img-top" %>
                    <div class="card-body">
                      <%= link_to product.name, product_path(product), class: "text-decoration-none" %>
                      <p>R$ <%= product.price %></p>
                      <p>ID: <%= product.id %></p>
                    </div>
                  </div>
                 </div>
              <% end %>
            </div>
          </div>
        </div>


        
        