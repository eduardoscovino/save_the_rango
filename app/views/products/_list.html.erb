<div data-refresh-list-target="list" class="my-3">
  <% if user_signed_in? %>
    <% if policy(Basket).show? && current_user.basket %>
        <%= link_to "My basket", basket_path(current_user.basket), class: "btn-main" %>
    <% end %>
  <% end %>
  <% if params[:query].blank? %>
    <h1 class="h3 m-3" style="color: white;"><%= pluralize products.count, 'product' %> you can save from throwing out!</h1>
  <% else %>
    <h1 class="h3 m-3" style="opacity: 0.7;"><%= pluralize products.count, 'result' %> for <code><%= params[:query] %></code></h1>
  <% end %>
  <div class="cards">
    <% @products.each do |product| %>
      <div class="grid-card">
        <%= cl_image_tag product.photo.key, width: 400, height: 300, crop: :fit %>
        <div class="card-product-infos">
          <div>
            <h5><%= link_to product.name, product_path(product), class: "text-decoration-none" %></h5>
            <p>R$ <%= product.price %></p>
          </div>
        </div>
        <% if user_signed_in? %>
          <%= link_to product_orders_path(product), method: :create, class:"btn btn-primary" do %>
            Add to cart <i class="fas fa-cart-plus"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

        
        
        