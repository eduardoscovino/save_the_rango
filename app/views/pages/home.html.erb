<div>
  <div class="container">
    <% if current_user %>
      <div class="container mt-2" id="hello-sentence">
        <p>Hello, <%= current_user.first_name %>!</p>
      </div>
    <% end %>
  </div>
  <div class="container my-5 content" id="home-page-top">
    <div class="d-flex space-between">
      <span class="d-flex justify-content-between align-items-center text-center"><h3>We believe it's possible to beat the waste and save the rango!</h3></span>
      <span class="picture"><%= image_tag("img_grocery.jpg", id: "main-picture") %></span>
    </div>
  </div>
  <div class="container my-5 content" id="home-page-middle">
    <span class="d-flex align-items-center text-center"><h3>We got two options for you to save the rango:</h3></span>
    <div class="d-flex space-around my-5" id="purchase-buttons">
      <span><%= link_to "SIGNATURE", signatures_path, class: "nav-link", class: "btn btn-success" %></span>
      <p>OR</p>
      <span><%= link_to "PRODUCTS", products_path, class: "nav-link", class: "btn btn-success" %></span>
    </div>
  </div>
  <div class="container my-5 content" id="home-page-bottom">
    <div id="mission-cards">
      <div>
      </div>
    </div>
  </div>
</div>